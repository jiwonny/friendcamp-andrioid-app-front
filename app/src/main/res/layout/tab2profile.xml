<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="0dp"
    android:background="#FFFFFF">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="22dp"
        android:text="Profile_name"
        android:textColor="#22295C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Profile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_mail_outline_24px"
        android:drawablePadding="11dp"
        android:text="Profile_id"
        app:layout_constraintStart_toStartOf="@+id/Profile_name"
        app:layout_constraintTop_toBottomOf="@+id/Profile_name" />

    <TextView
        android:id="@+id/Profile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_outline_call_24px"
        android:drawablePadding="11dp"
        android:text="Profile_number"
        app:layout_constraintStart_toStartOf="@+id/Profile_id"
        app:layout_constraintTop_toBottomOf="@+id/Profile_id" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Profile_number">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#8A8A8A"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:contentPaddingBottom="0.5dp"
            app:contentPaddingLeft="0.5dp"
            app:contentPaddingRight="0dp"
            app:contentPaddingTop="0.5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:cardBackgroundColor="#FFFFFF"

                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/num_posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Posts"
                        android:textSize="14dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#8A8A8A"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:contentPaddingBottom="0.5dp"
            app:contentPaddingLeft="0.5dp"
            app:contentPaddingRight="0dp"
            app:contentPaddingTop="0.5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_card"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Edit Profile"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView
            android:layout_width="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#8A8A8A"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:contentPaddingBottom="0.5dp"
            app:contentPaddingLeft="0.5dp"
            app:contentPaddingRight="0dp"
            app:contentPaddingTop="0.5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/upload_card"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Upload"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>